<?xml version="1.0" encoding="ISO-8859-1"?>

<decorators defaultdir="/decorators">
	<!-- Any urls that are excluded will never be decorated by Sitemesh -->
	<excludes>
		<pattern>/idCheck.ap</pattern>
		<pattern>/popupLogin.ap</pattern>
	</excludes>

	<decorator name="header" page="header.jsp">
		<pattern>/*</pattern>
	</decorator>

	<decorator name="user" page="userMenu.jsp">
		<pattern>/user/*</pattern>
	</decorator>
	<decorator name="shop" page="shopMenu.jsp">
		<pattern>/shop/*</pattern>
	</decorator>
</decorators>